{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productimg": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "productTitle": {
      "type": "string",
      "required": true
    },
    "productPrice": {
      "type": "decimal",
      "required": true
    },
    "productDescription": {
      "type": "text",
      "required": true
    },
    "productRating": {
      "type": "decimal",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "men",
        "woman"
      ]
    },
    "isOffer": {
      "type": "boolean",
      "required": true
    },
    "discountPercent": {
      "type": "decimal"
    },
    "oldPrice": {
      "type": "integer"
    },
    "subcategory": {
      "type": "enumeration",
      "enum": [
        "t-shirts",
        "jackets",
        "pants",
        "shoes",
        "watches",
        "shirts"
      ]
    }
  }
}
